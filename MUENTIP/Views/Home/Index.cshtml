@using MUENTIP.ViewModels
@model HomeViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Home/activity_card.css" />
    <link rel="stylesheet" href="~/css/Home/home_page.css" />
</head>

<body>
    <header class="header-muentip"><div>MUENTIP</div></header>
    <nav class="header-nav">
        <ul class="header-menu">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a href="@Url.Action("Index", "MyActivity")">My Activity</a></li>
            }
