        <div id="realtime-activity" class="act-div"></div>
    </section>
    <button id="back-to-top"><img src="~/img/back-to-top.png" /></button>
    <script>
        var activityModel = @Html.Raw(Json.Serialize(Model));
        var ViewActivityURL = "@Url.Action("Index", "ViewActivity")";
        var CreateActivity = "@Url.Action("Index", "CreateActivity")";
    </script>
    <script src="~/js/Home/activity_card.js"></script>
    <script src="~/js/Home/home_page.js"></script>
</body>

</html>
